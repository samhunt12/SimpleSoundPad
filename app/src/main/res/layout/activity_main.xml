<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.soundpad.MainActivity"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple Sound Pad"
        android:textColor="#B3B365"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:textSize="30dp"
        android:textStyle=""
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="     New Beat Anthem"
        android:textColor="#B6B186"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/purple_button"
            android:onClick="bunyi1"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:background="@drawable/purple_button"
            android:onClick="bunyi2"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:background="@drawable/purple_button"
            android:onClick="bunyi3"
            android:layout_width="110dp"
            android:layout_height="110dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/green_button"
            android:onClick="bunyi4"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:background="@drawable/orange_button"
            android:layout_marginLeft="5dp"
            android:onClick="bunyi5"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:background="@drawable/blue_button"
            android:layout_marginLeft="5dp"
            android:onClick="bunyi6"
            android:layout_width="110dp"
            android:layout_height="110dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/blue_button"
            android:onClick="bunyi7"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:background="@drawable/blue_button"
            android:layout_marginLeft="5dp"
            android:onClick="bunyi8"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:background="@drawable/blue_button"
            android:layout_marginLeft="5dp"
            android:onClick="bunyi9"
            android:layout_width="110dp"
            android:layout_height="110dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/purple_button"
            android:onClick="bunyi10"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:background="@drawable/pink_button"
            android:layout_marginLeft="5dp"
            android:onClick="bunyi11"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:background="@drawable/green_button"
            android:layout_marginLeft="5dp"
            android:onClick="bunyi12"
            android:layout_width="110dp"
            android:layout_height="110dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StayHome | Belajar"
        android:textColor="#C3C39B"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copyright Android Stuido 2020"
        android:textColor="#C3C39B"
        android:textAlignment="center"
        android:gravity="center_horizontal" />


</LinearLayout>